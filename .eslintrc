{
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  },
  "plugins": ["import"],
  "extends": "eslint-config-es6",
  "rules": {
    "semi": [2, "never"],
    "quotes": [2, "single"],
    "no-return-assign": 0,
    "no-use-before-define": 0,
    "global-require": 0,
    "indent": ["error", 2],
    "import/no-extraneous-dependencies": 0,
    "consistent-return": 0,
    "no-prototype-builtins": 0,
    "curly": 0,
    "no-restricted-syntax": 0,
    "guard-for-in": 0,
    "arrow-parens": 0,
    "no-shadow": 0,
    "lines-around-directive": 0,
    "spaced-comment": 0,
    "no-param-reassign": 0,
    "eqeqeq": 0,
    "class-methods-use-this": 0,
    "no-mixed-operators": 0,
    "space-infix-ops": 0
  }
}